@using BlogAPI.DATA.Models
@model IEnumerable<Role>

<h2>Список ролей</h2>
@if (User.Identity.IsAuthenticated && User.IsInRole("Администратор"))
{
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>@role.Description</td>
            <td>
                <form asp-action="EditRole" asp-route-id="@role.Id" asp-controller="Roles" method="get">
                    <button type="submit" class="btn btn-outline-secondary btn-sm">
                        Редактировать
                    </button>
                </form>
                <br />
                <form asp-action="Delete" asp-route-id="@role.Id" asp-controller="Roles" method="post">
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Create">Добавить роль</a>
<br />
<a asp-action="UserList">Список пользователей и их ролей</a>
}
else 
{
   <p>Для управления ролями нужны права администратора</p>
}