@model BlogWebApp.BLL.Models.Entities.Role

@{
    ViewData["Title"] = "Редактирование роли";
}

<div class="text-start">
    <div>
        <h3>Редактирование роли</h3>
        <form method="post" asp-action="Edit" asp-controller="Role" asp-route-id="@Model.Id">
              <div class="mb-3">
                <label for="InputRoleid" class="form-label">Id</label>
                <input type="text" class="form-control" id="InputRoleid" asp-for="Id" value="@Model.Id" disabled>
            </div>
            <div class="mb-3">
                <label for="InputRole" class="form-label">Название</label>
                <input type="text" class="form-control" id="InputRole" asp-for="RoleName">
            </div>
             <div class="mb-3">
                <label for="inputDescription" class="form-label">Описание</label>
                <textarea class="form-control" id="inputDescription" rows="3" asp-for="RoleDescription"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
        <br>
        <form method="post" asp-action="Delete" asp-action="Role" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-sm btn-danger float-right btn-mrg">Удалить</button>
        </form>
        <p><a asp-area="" asp-controller="Role" asp-action="GetRoles">Перейти к списку всех ролей</a></p>
    </div>
</div>
